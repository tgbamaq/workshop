extends ../layouts/baseLayout.pug
block content
	div(class="container px-4 px-lg-5")
		div(class="row gx-4 gx-lg-5 justify-content-center")
			div(class="col-md-10 col-lg-8 col-xl-7")
				each post in posts
					if post.userId == 1
						include ../components/card-post.pug
					else 
						include ../components/card2.pug
						
		